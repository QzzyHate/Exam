@page
@model Exam.Pages.AddOrderModel
@{
    ViewData["Title"] = "Добавить заявку";
}
<h1>Добавить заявку</h1>

<form method="post">
    <div>
        <label>Номер заявки:</label>
        <input type="number" name="number" required />
    </div>
    <div>
        <label>Дата добавления:</label>
        <input type="date" name="dateAdded" required />
    </div>
    <div>
        <label>Оборудование:</label>
        <input type="text" name="device" required />
    </div>
    <div>
        <label>Тип неисправности:</label>
        <input type="text" name="problemType" required />
    </div>
    <div>
        <label>Описание:</label>
        <textarea name="description" required></textarea>
    </div>
    <div>
        <label>Клиент:</label>
        <input type="text" name="client" required />
    </div>
    <div>
        <label>Статус:</label>
        <select name="status" required>
            <option value="в ожидании">в ожидании</option>
            <option value="в работе">в работе</option>
            <option value="выполнено">выполнено</option>
        </select>
    </div>
    <button type="submit">Добавить</button>
</form>
