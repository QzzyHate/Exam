@page
@model Exam.Pages.AuthModel
@{
    ViewData["Title"] = "Авторизация";
}
<h1>Авторизация</h1>

<form method="post">
    @Html.AntiForgeryToken() <!-- обязательный антифальсификационный токен -->
    <div>
        <label>Логин</label>
        <input type="text" name="login" />
    </div>
    <div>
        <label>Пароль</label>
        <input type="password" name="password" />
    </div>
    <button type="submit">Войти</button>
</form>